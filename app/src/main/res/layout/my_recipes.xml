<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gordey.cookbook.MainActivity">


    <EditText
        android:id="@+id/myname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Название блюда"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/Button"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:text="Add"
        android:drawableLeft="@android:drawable/ic_input_add"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/Button"
        android:layout_marginStart="32dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/myrecipe" />

    <EditText
        android:id="@+id/myrecipe"
        android:layout_width="341dp"
        android:layout_height="205dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Рецепт"
        android:inputType="textMultiLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myname"
        style="@style/Button"
        app:layout_constraintHorizontal_bias="0.518" />

    <Button
        android:id="@+id/my_list_recipe"
        android:layout_width="201dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="19dp"
        android:text="Мои рецепты"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAdd"
        style="@style/Button"
        android:drawableLeft="@mipmap/logo"
        app:layout_constraintHorizontal_bias="0.502" />


</android.support.constraint.ConstraintLayout>